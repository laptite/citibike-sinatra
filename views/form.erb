<h1>Map my route!</h1>

<form action='/map' method="POST">
  
  Start route: <select name="start"><br>
    <% @data.each do |station| %>
    <option value="<%= "#{station["lat"]}, #{station["lng"]}" %>">
    <%= station["name"] %></option>
    <% end %>
    </select><br><br>
  
  End route: <select name="end"><br>
    <% @data.each do |station| %>
    <option value="<%= "#{station["lat"]}, #{station["lng"]}" %>">
    <%= station["name"] %></option>
    <% end %>
    </select><br>
  <br>
  
  <input type="Submit" value="Submit route">
</form>


